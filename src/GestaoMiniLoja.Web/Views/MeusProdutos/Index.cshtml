@model IEnumerable<GestaoMiniLoja.Data.Models.Produto>

@{
    ViewData["Title"] = "Meus produtos";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Sucesso"] != null || ViewData["Sucesso"] != null)
{
    var mensagem = TempData["Sucesso"] != null ? TempData["Sucesso"] : ViewData["Sucesso"];

    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-success">
        <h4 id="msgRetorno">@Html.Raw(mensagem)</h4>
    </div>
}

@if (TempData["Falha"] != null)
{
    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-danger">
        <h4 id="msgRetorno">@Html.Raw(TempData["Falha"])</h4>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary"><spam class="fa fa-plus"></spam> Novo produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>

            <th class ="text-end">
                @Html.DisplayNameFor(model => model.Preco)
            </th>

            <th class="text-end">
                @Html.DisplayNameFor(model => model.QuantidadeEmEstoque)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CategoriaDeProduto)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Nome
            </td>

            <td>
                @item.Descricao
            </td>

            <td class="text-end">
                @item.Preco
            </td>

            <td class="text-end">
                @item.QuantidadeEmEstoque
            </td>

            <td>
                @item.CategoriaDeProduto?.Descricao
            </td>

            <td>
                <partial name="_AcoesDeItemDeListaPartial" model="@item.Id" />
            </td>
        </tr>
}
    </tbody>
</table>
