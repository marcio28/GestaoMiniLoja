@model GestaoMiniLoja.Data.Models.Produto

@{
    ViewData["Title"] = $"Detalhes do produto {Model.Nome}";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CaminhoDaImagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaminhoDaImagem)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeEmEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEmEstoque)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaDeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaDeProduto.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</div>
