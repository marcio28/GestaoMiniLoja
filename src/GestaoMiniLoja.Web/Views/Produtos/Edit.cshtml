@model GestaoMiniLoja.Data.Models.Produto

@{
    ViewData["Title"] = $"Editar produto {Model.Nome}";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CaminhoDaImagem" class="control-label"></label>
                <input asp-for="CaminhoDaImagem" class="form-control" />
                <span asp-validation-for="CaminhoDaImagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantidadeEmEstoque" class="control-label"></label>
                <input asp-for="QuantidadeEmEstoque" class="form-control" />
                <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoriaDeProduto" class="control-label"></label>
                <select asp-for="CategoriaDeProdutoId" class="form-control" asp-items="ViewBag.CategoriaDeProdutoId"></select>
                <span asp-validation-for="CategoriaDeProdutoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="VendedorId" />
                <input type="submit" value="Salvar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
